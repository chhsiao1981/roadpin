div(ng-controller="MapCtrl")
  div.states
    button.btn.btn-primary(type=button, ng-model="states.isDistVincenty", btn-checkbox, btn-checkbox-true="'yes'", btn-checkbox-false="'no'")
      div 
        p 估測距離: {{states.isDistVincenty}} 
    button.btn.btn-primary(type=button, ng-model="dummy", ng-click="onClearDistList()", btn-checkbox, btn-checkbox-true="'yes'", btn-checkbox-false="'no'")
      div 
        p Clear
    div(ng-class="distVincentyClass()")
      p distance: {{distVincenty}} m

  div#map-legend
    span(ng-repeat="legend_type in LEGENDS")
      span(style="background-color: {{LEGEND_COLOR[legend_type]}}; color: white;") {{LEGEND_STRING[legend_type]}}
      span(style="background-color: white; padding:2px;")
  div.map-canvas(ui-map="myMap", ui-options="mapOptions", ui-event="{'map-idle' : 'onMapIdle()', 'map-click': 'onMapClick($event, $params)', 'map-zoom_changed': 'onMapZoomChanged(myMap.getZoom())'}")
